<core:FragmentDefinition xmlns:tnt="sap.tnt"
    xmlns:core= "sap.ui.core"
    xmlns="sap.m">

    <Panel id="pAccountDetails" expandable="false" headerText="Account Details" width="auto" class="sapUiResponsiveMargin">
        <content>
            <HBox id="hBox4">
                <Avatar id="aUserProfile" src="" displaySize="XL" showBorder="true" press="onPress"/>
                <VBox id="vBox1" class="sapUiSmallMargin sapUiLargeMarginBegin">
                    <HBox id="hBox1">
                        <Label id="lblacnum" text="{i18n>accNum}" class="sapUiSmallMarginEnd"/>
                        <Text id="accountNum" text="192837465" />
                    </HBox>
                    <HBox id="hBox2">
                        <Label id="lblAcHolderNameId" text="{i18n>accHName}" class="sapUiSmallMarginEnd"/>
                        <Text id="idAcHolderNameValue" text="Anisha Parida"/>
                    </HBox>
                    <HBox id="hBox3" class="sapUiSmallMarginBottom">
                        <Label id="lblIFSCId" text="{i18n>ifsCode}" class="sapUiSmallMarginEnd"/>
                        <Text id="idIFSCValue" text="AXIS001921"/>
                    </HBox>
                    <Button id="openBankDetails" type="Neutral" text="{i18n>findMoreBtn}" press=".onOpenBankDetails"/>
                </VBox>
            </HBox>

        </content>
    </Panel>
</core:FragmentDefinition> 